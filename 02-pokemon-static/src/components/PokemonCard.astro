---
interface Props {
  url: string;
  name: string;
  isBig?: boolean;
}

const { url, name, isBig = false } = Astro.props;
const id = url.split("/").at(-2);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<a
  href={`/pokemons/${name}`}
  class="rounded flex flex-col justify-center items-center p-2"
>
  <img
    class:list={[{ "h-26 w-26": isBig, "h-50 w-50": !isBig }]}
    src={imageSrc}
    alt={name}
  />
  <span class:list={["capitalize", { "text-3xl": isBig }]}
    >#{id}
    {name}</span
  ></a
>
